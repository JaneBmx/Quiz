{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('form') }}
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <form class="box" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1>Login</h1>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Email" required>
        <input type="password" name="password" id="inputPassword" placeholder="Password" required>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">
        <div class="cb">
            <input type="checkbox" name="_remember_me"> Remember me
        </div>
        <input type="submit" name="" value="Login">

        <a href="{{ path('app_forgot_password_request') }}">Forgot password?</a><br>
        <a href="{{ path('app_register') }}">Have no account yet? Sign up!</a>
    </form>
{% endblock %}