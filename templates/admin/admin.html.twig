<!Doctype html>
<html>
<head>
    <title>Administrate panel</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="{{ asset('css/admin/admin.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/header/header.css') }}" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script src="{{ asset('js/admin/admin.js') }}"></script>
</head>

<body>
{{ include('header/header.html.twig') }}
<center><h1>Total users :{{ users.getTotalItemCount }}</h1></center>
    <table class="user_table" cellspacing="25px" cellpadding="5px">
        <thead>
        <tr> {# sorting of properties based on query components #}
            <th>{{ knp_pagination_sortable(users , 'id', 'i.id') }}</th>
            <th>{{ knp_pagination_sortable(users , 'name', 'i.name') }}</th>
            <th>{{ knp_pagination_sortable(users , 'email', 'i.email') }}</th>
            <th>{{ knp_pagination_sortable(users , 'active', 'i.isActive') }}</th>
            <th>Toolbar</th>
        </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.getId }}</td>
                    <td>{{ user.getName }}</td>
                    <td>{{ user.getEmail }}</td>
                    <td>{{ user.getIsActive }}</td>
                    <td class="user_tools" id="{{ user.getId }}">
                        <span>delete</span>
                        <span>lock</span>
                        <span>unlock</span>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
        {# display navigation #}
        <div class="pagination">
            {{ knp_pagination_render(users) }}
        </div>

</body>

</html>