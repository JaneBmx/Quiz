{% extends 'base.html.twig' %}
{% block title %}Admin panel{% endblock %}
{% block body %}
    <div style="display:flex;">
        <div class="left_bar">
            <div class="link_block">
                <span class="badge link_level_1">Quiz</span>
                <div class="links" style="display:none;margin-left:1em;">
                    <a class="badge link_level_2" href="{{ path('app_show_quizes') }}">All</a>
                    <a class="badge link_level_2" href="{{ path('create_quiz_page') }}">Create</a>
                </div>
            </div>
            <div class="link_block">
                <span class="badge link_level_1">Question</span>
                <div class="links" style="display:none;margin-left:1em;">
                    <a class="badge link_level_2" href="{{ path('app_show_questions') }}">All</a>
                    <a class="badge link_level_2" href="{{ path('app_create_question_page') }}">Create</a>
                </div>
            </div>
            <div class="link_block">
                <span class="badge link_level_1">User</span>
                <div class="links" style="display:none;margin-left:1em;">
                    <a class="badge link_level_2" href="{{ path('app_show_users') }}">All</a>
                </div>
            </div>
        </div>
        <div class="right_bar">
            {% block rightbar %}
            {% endblock %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}