{% extends 'base.html.twig' %}
{% block title %}{{ 'lb.title'|trans }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <h3>{{ 'lb.count' |trans }}: {{ pagination.getTotalItemCount }}</h3>
    </div>
    <table class="table table-dark">
        <thead>
        <tr>
            <th>{{ 'lb.number' |trans }}</th>
            <th>{{ 'lb.name' |trans }}</th>
            <th>{{ 'lb.score' |trans }}</th>
            <th>{{ 'lb.duration' |trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for result in pagination %}
            <tr>
                <th>{{ loop.index }}</th>
                <th>{{ result.user.name }}</th>
                <th>{{ result.result }}</th>
                <th>{{ result.duration }}</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}