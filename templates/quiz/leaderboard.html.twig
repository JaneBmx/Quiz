{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-center">
        <h3>Total count of results: {{ pagination.getTotalItemCount }}</h3>
    </div>
    <table class="table table-dark">
        <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                user name
            </th>
            <th>
                score
            </th>
            <th>
                duration
            </th>
        </tr>
        </thead>
        <tbody>
        {% for result in pagination %}
            <tr>
                <th>{{ loop.index }}</th>
                <th>{{ result.user.name }}</th>
                <th>{{ result.result }}</th>
                <th>{{ result.duration }}</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}

