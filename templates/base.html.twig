<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="container-fluid">
    <header>
        {% block header %}
            <div class="row flex-fill">
                <div class="col-sm-1"><a href="{{ path('app_home') }}">{% trans %}Home{% endtrans %}</a></div>
                <div class="col-sm-1"><a href="{{ path('app_quizes') }}">{% trans %}Quizes{% endtrans %}</a></div>
                {% if app.request.locale == "en" %}
                <div class="col-sm-1"><a href="{{ path('app_locale',{_locale:"ru"}) }}"><img src="{{ asset('build/russia.png') }}"/></a></div>
                {%  elseif app.request.locale == "ru" %}
                <div class="col-sm-1"><a href="{{ path('app_locale',{_locale:"en"}) }}"><img src="{{ asset('build/uk.png') }}"/></a></a></div>
                {% endif %}
                <div class="col-sm-6"></div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="col-sm-1">
                        <a href="{{ path('admin_page') }}">Admin</a>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <div class="col-sm-1">
                        <a href="{{ path('app_profile') }}">{{ app.user.name }}</a>
                    </div>
                {% endif %}

                {% if is_granted('ROLE_USER') %}
                    <div class="col-sm-1 float-left"><a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a></div>
                {% endif %}
                {% if not is_granted('ROLE_USER') %}
                    <div class="col-sm-1 float-left"><a href="{{ path('app_login') }}">{% trans %}Login{% endtrans %}</a></div>
                    <div class="col-sm-1 float-left"><a href="{{ path('app_register') }}">{% trans %}Register{% endtrans %}</a></div>
                {% endif %}
            </div>
        {% endblock %}
    </header>
    {% block body %}
    {% endblock %}

    {{ encore_entry_script_tags('app') }}
    {% block javascripts %}

    {% endblock %}
</div>
</body>
</html>
