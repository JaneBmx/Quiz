{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('post_page') }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="co">

            <div class="tbl">

                <div class="d-flex justify-content-between">
                    {% for msg in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">{{ msg }}</div>
                    {% endfor %}

                    <h3>{{ 'quiz.count'|trans }}: {{ pagination.getTotalItemCount }}</h3>

                    <div class="d-flex justify-content-center meh">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                    <form class="form-inline" action="{{ url('app_posts') }}">
                        <input class="form-control mr-sm-2" type="search" placeholder="{{ 'quiz.search'|trans }}"
                               aria-label="Search" name="search">
                        <button class="btn btn-outline-success my-2 my-sm-0"
                                type="submit">{{ 'quiz.search.button'|trans }}</button>
                    </form>
                </div>
                <hr>
                <div class="msgs">
                    <table>
                        {% for post in pagination %}
                            <tr>
                                <th class="username">{{ post.user.name }}</th>
                                <th> {{ post.date.format('quiz.date.format'|trans) }}</th>
                                <th> {{ post.message }}</th>
                                <th>{% if post.isModified %} edited{% endif %}</th>

                                {% if app.user and app.user.id == post.user.id %}
                                    <th>
                                        <form action="{{ url('app_post_edit', {id: post.id}) }}">
                                            <button class="btn btn-outline-success my-2 my-sm-0"
                                                    type="submit">Edit
                                            </button>
                                        </form>
                                    </th>
                                {% endif %}

                                {% if app.user and app.user.id == post.user.id or is_granted('ROLE_ADMIN') %}
                                    <th>
                                        <form action="{{ url('app_post_delete', {id: post.id}) }}">
                                            <button class="btn btn-outline-success my-2 my-sm-0"
                                                    type="submit">Delete
                                            </button>
                                        </form>
                                    </th>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <hr>
                {% if is_granted('ROLE_USER') %}
                    <div class="d-flex justify-content-center">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Send!</button>
                        {{ form_end(form) }}
                    </div>
                {% else %}
                    You are not authorized. Please, log in for leaving a message here.
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}