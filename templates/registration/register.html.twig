{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('form') }}
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="box">
        <h1>Register</h1>
        {{ form_start(registrationForm) }}
        {{ form_widget(registrationForm.name,{'attr': {'placeholder': 'Name','label':'false'}}) }}
        {{ form_widget(registrationForm.email,{'attr': {'placeholder': 'Email','label':'false'}}) }}
        {{ form_widget(registrationForm.password,{'attr': {'placeholder': 'Password','label':'false'}}) }}
        <input type="submit" name="" value="Register">
        {{ form_end(registrationForm) }}
        <br><a href="{{ path('app_login') }}">Already have an account? Log in</a>
    </div>

{% endblock %}