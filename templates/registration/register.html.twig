{% extends 'base.html.twig' %}

{% block title %}{{ 'reg.title'|trans }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('form') }}
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="box">
        <h1>{{ 'reg.title' | trans }}</h1>
        {{ form_start(registrationForm) }}
        {{ form_widget(registrationForm.name,{'attr': {'placeholder': 'reg.name'|trans,'label':'false'}}) }}
        {{ form_widget(registrationForm.email,{'attr': {'placeholder': 'reg.email'|trans,'label':'false'}}) }}
        {{ form_widget(registrationForm.password,{'attr': {'placeholder': 'reg.password'|trans,'label':'false'}}) }}
        <input type="submit" name="" value={{ 'reg.submit'|trans }}>
        {{ form_end(registrationForm) }}
        <a href="{{ path('app_login') }}">{{ 'reg.acc'|trans }}</a>
    </div>
{% endblock %}